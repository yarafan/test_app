<p>
	<strong>
      Author <%= comment.user.login if comment.user %> 
    </strong>
  <br/>
    <strong>
      Posted <%= time_ago_in_words(comment.created_at) %> ago
    </strong>
  <br/>
      <%= comment.body %>
  </p>

<% if current_user?(comment.user) || current_user.try(:moder) || current_user.try(:admin) %>

 <%= link_to 'Edit', edit_post_comment_path(comment.post, comment) %>
 <%= link_to 'Delete', [comment.post, comment], method: :delete,
  data: { confirm: "Are you sure?" }, :remote => true %>

<% end %>